generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  password     String
  refreshtoken RefreshToken[]
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model QuestionPaper {
  id           Int    @id @default(autoincrement())
  questionName String @unique
  optionA      String
  optionB      String
  optionC      String
  optionD      String
  ans          String
}
